{
    "manifest_version": 3,
    "name": "Manual Test Recorder",
    "version": "1.0.0",
    "description": "Record manual testing flows and get AI test case suggestions.",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/icon32.png"
    },
    "permissions": [
      "storage"
    ]
  }
  